{
	// Online capabilities
	"online": true,

	// Official mode - if set to false, you won't be eligible for online scores - this setting ignores some of the customizable options
	"official": true, 

	// Window options
	"fullscreen": true,
	"fullscreen_auto_resolution": true,
	"fullscreen_width": 1024,
	"fullscreen_height": 768,
	"windowed_auto_resolution": false,
	"windowed_width": 1024,
	"windowed_height": 768,
	"auto_zoom_factor": true, // Ignored in official mode
	"zoom_factor": 1, 	
	"pixel_multiplier": 1,
	
	// FPS options
	"static_frametime": false, // Ignored in official mode
	"static_frametime_value": 1,
	"limit_fps": false,
	"vsync": false,
	
	// Graphical options
	"no_rotation": false, // Ignored in official mode
	"no_background": false, // Ignored in official mode
	"black_and_white": false, // Ignored in official mode
	"pulse_enabled": true, // Ignored in official mode
	"beatpulse_enabled": true, // Ignored in official mode
	"3D_enabled": true,
	"3D_multiplier": 1.0,
	"3D_max_depth": 100,
	"flash_enabled": true,
	
	// Audio options
	"no_sound": false,
	"no_music": false,
	"sound_volume": 100,
	"music_volume": 75,	
	
	// Player options
	"player_speed": 9.45, // Ignored in official mode
	"player_focus_speed": 4.625, // Ignored in official mode
	"player_size": 7.3, // Ignored in official mode
	"auto_restart": false,
	
	// Scripting options
	"debug": false,
	"show_messages": true,
	"change_styles": true,
	"change_music": true,
	
	// Cheats
	"invincible": false, // Ignored in official mode

	// Inputs
	"t_rotate_ccw":		[ ["kLeft"], ["kA"], ["bLeft"] ],
	"t_rotate_cw":		[ ["kRight"], ["kD"], ["bRight"] ],
	"t_focus":			[ ["kLShift"], ["bMiddle"] ],
	"t_exit": 			[ ["kEscape"] ],
	"t_force_restart": 	[ ["kR"], ["kUp"], ["bXButton1"], ["bXButton2"] ],
	"t_restart":		[ ["kReturn"], ["kSpace"] ],
	"t_screenshot":		[ ["kF12"] ]
}